<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--General-->
        <service id="csc.generator.exception_response" class="CSC\Server\Response\Generator\ExceptionResponseGenerator">
            <argument type="service" id="csc.normalizer.exception" />
        </service>

        <!---->
        <service id="csc.generator.link_token" class="CSC\Component\Generator\LinkTokenGenerator">
            <call method="setEntityManager">
                <argument type="service" id="csc.entity_manager.provider" />
            </call>
        </service>
    </services>
</container>

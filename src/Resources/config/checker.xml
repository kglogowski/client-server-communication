<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--General-->
        <service id="csc.checker.query_parameter" class="CSC\Component\Checker\QueryParameterChecker">
        </service>

        <!--Rest-->
        <service id="csc.rest.checker.insertable" class="CSC\Protocol\Rest\Server\Checker\InsertableChecker">
            <argument>%csc.simple_data_object%</argument>
        </service>
        <service id="csc.rest.checker.updatable" class="CSC\Protocol\Rest\Server\Checker\UpdatableChecker">
            <argument>%csc.simple_data_object%</argument>
        </service>
        <service id="csc.rest.checker.jwt_token" class="CSC\Protocol\Rest\Auth\Security\Checker\JwtTokenChecker">
            <call method="setConfig">
                <argument>%csc.configuration%</argument>
            </call>
        </service>
    </services>
</container>

<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--General-->
        <service id="CSC\Component\Checker\QueryParameterChecker" />
        <service id="csc.checker.security" class="CSC\Component\Rest\Request\Checker\SecurityChecker" parent="security.authorization_checker" />

        <!---->
        <service id="csc.checker.insertable" class="CSC\Server\Checker\InsertableChecker">
            <argument>%csc.simple_data_object%</argument>
        </service>
        <service id="csc.checker.updatable" class="CSC\Server\Checker\UpdatableChecker">
            <argument>%csc.simple_data_object%</argument>
        </service>
        <service id="csc.checker.jwt_token" class="CSC\Component\Auth\Security\Checker\JwtTokenChecker">
            <call method="setConfig">
                <argument>%csc.configuration%</argument>
            </call>
        </service>
    </services>
</container>

<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Rest-->
        <!--Request-->
        <service id="csc.rest.factory.pager_request_model" class="CSC\Protocol\Rest\Server\Request\Factory\RestPagerRequestModelFactory">
        </service>
        <service id="csc.rest.factory.plain_pager_request_model" class="CSC\Protocol\Rest\Server\Request\Factory\RestPlainPagerRequestModelFactory">
        </service>

        <!--Response-->
        <service id="csc.rest.factory.pager_response_model" class="CSC\Protocol\Rest\Server\Response\Factory\RestPagerResponseModelFactory">
            <argument type="service" id="csc.rest.factory.pager_response_model" />
        </service>
        <service id="csc.rest.factory.simple_response_model" class="CSC\Protocol\Rest\Server\Response\Factory\RestSimpleResponseModelFactory">
        </service>
    </services>
</container>

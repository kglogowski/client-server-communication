<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--General-->
        <service id="csc.provider.user_provider" class="CSC\Component\Provider\UserProvider">
            <argument type="service" id="security.token_storage" />
        </service>
        <service id="csc.provider.count" class="CSC\Component\Provider\QueryCountProvider">
        </service>
        <service id="csc.provider.query_items" class="CSC\Component\Provider\QueryItemsProvider">
        </service>
        <service id="csc.provider.http_success_status" class="CSC\Component\Provider\HttpSuccessStatusProvider">
        </service>

        <!---->
        <service id="csc.provider.pager_query" class="CSC\Server\Provider\PagerQueryProvider">
            <argument type="service" id="csc.entity_manager.provider" />
            <argument type="service" id="csc.builder.pager_query" />
            <argument type="service" id="csc.provider.user_provider" />
            <argument>%csc.pager_data_object%</argument>
        </service>
        <service id="csc.entity_manager.provider" class="CSC\Component\Provider\EntityManagerProvider">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager" />
            </call>
        </service>
        <service id="csc.provider.get_element" class="CSC\Server\Provider\GetElementProvider">
            <argument type="service" id="csc.entity_manager.provider" />
        </service>
        <service id="csc.provider.link_token" class="CSC\Component\Provider\LinkTokenProvider">
            <argument>%csc.configuration%</argument>
            <argument type="service" id="csc.provider.get_element" />
            <argument type="service" id="csc.entity_manager.provider" />
        </service>
    </services>
</container>

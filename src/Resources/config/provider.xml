<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--General-->
        <service id="csc.provider.user_provider" class="CSC\Component\Provider\UserProvider">
            <argument type="service" id="security.token_storage" />
        </service>
        <service id="csc.provider.count" class="CSC\Component\Provider\QueryCountProvider">
        </service>
        <service id="csc.provider.query_items" class="CSC\Component\Provider\QueryItemsProvider">
        </service>
        <service id="csc.provider.http_success_status" class="CSC\Component\Provider\HttpSuccessStatusProvider">
        </service>

        <!--Rest-->
        <service id="csc.rest.provider.pager_query" class="CSC\Protocol\Rest\Server\Provider\RestPagerQueryProvider">
            <argument type="service" id="csc.entity_manager.provider" />
            <argument type="service" id="csc.rest.builder.pager_query" />
            <argument type="service" id="csc.provider.user_provider" />
            <argument>%csc.pager_data_object%</argument>
        </service>
        <service id="csc.entity_manager.provider" class="CSC\Component\Provider\EntityManagerProvider">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager" />
            </call>
        </service>
        <service id="csc.rest.provider.get_element" class="CSC\Protocol\Rest\Server\Provider\RestGetElementProvider">
            <argument type="service" id="csc.entity_manager.provider" />
        </service>
    </services>
</container>

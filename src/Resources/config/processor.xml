<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Rest-->
        <!--Request-->
        <!--Pager-->
        <service id="csc.rest.request_processor.pager" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestPagerRequestProcessor">
            <argument type="service" id="csc.rest.factory.pager_request_model" />
            <argument type="service" id="csc.rest.provider.pager_query" />
            <argument type="service" id="csc.rest.paginator.basic" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <service id="csc.rest.request_processor.plain_pager" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestPlainPagerRequestProcessor">
            <argument type="service" id="csc.rest.factory.plain_pager_request_model" />
            <argument type="service" id="csc.rest.provider.pager_query" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <!--Simple-->
        <service id="csc.rest.request_processor.get" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestGetRequestProcessor">
            <argument type="service" id="csc.rest.provider.get_element" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <service id="csc.rest.request_processor.post" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestPostRequestProcessor">
            <argument type="service" id="csc.rest.checker.insertable" />
            <argument type="service" id="csc.executor.insert" />
            <argument type="service" id="csc.executor.merge" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <service id="csc.rest.request_processor.put" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestPutRequestProcessor">
            <argument type="service" id="csc.rest.checker.updatable" />
            <argument type="service" id="csc.executor.patch" />
            <argument type="service" id="csc.executor.merge" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <service id="csc.rest.request_processor.delete" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestDeleteRequestProcessor">
            <argument type="service" id="csc.rest.provider.get_element" />
            <argument type="service" id="csc.executor.delete" />
            <argument type="service" id="csc.rest.factory.response_model" />
        </service>
        <service id="csc.rest.request_processor.crud" parent="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\RestCrudRequestProcessor">
            <argument type="service" id="csc.rest.request_processor.post" />
            <argument type="service" id="csc.rest.request_processor.get" />
            <argument type="service" id="csc.rest.request_processor.put" />
            <argument type="service" id="csc.rest.request_processor.delete" />
        </service>
        <!--Abstract-->
        <service id="csc.rest.processor.abstract" class="CSC\Protocol\Rest\Server\Request\Processor\AbstractRestRequestProcessor" abstract="true">
            <call method="setEntityManager">
                <argument type="service" id="csc.entity_manager.provider" />
            </call>
            <call method="setSerializer">
                <argument type="service" id="jms_serializer" />
            </call>
            <!--TODO Add logger -->
            <!--<call method="setLogger">-->
                <!--<argument type="service" id="monolog.logger_prototype"/>-->
            <!--</call>-->
            <call method="setRequestStack">
                <argument type="service" id="request_stack"/>
            </call>
            <call method="setValidator">
                <argument type="service" id="validator"/>
            </call>
        </service>

        <!--Response-->
        <service id="csc.rest.response_processor" class="CSC\Protocol\Rest\Server\Response\Processor\RestResponseProcessor">
            <argument type="service" id="csc.provider.http_success_status" />
        </service>
    </services>
</container>

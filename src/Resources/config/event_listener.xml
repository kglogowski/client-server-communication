<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <!-- REQUEST LISTENER -->
        <service id="csc.log.request.event_listener" class="CSC\Component\EventListener\RequestListener">
            <call method="setLogger">
                <argument type="service" id="monolog.logger.raw_request" />
            </call>
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>

        <!-- RESPONSE LISTENER -->
        <service id="csc.log.response.event_listener" class="CSC\Component\EventListener\ResponseListener">
            <call method="setLogger">
                <argument type="service" id="monolog.logger.raw_response" />
            </call>
            <tag name="kernel.event_listener" event="kernel.response" />
        </service>

    </services>

</container>
